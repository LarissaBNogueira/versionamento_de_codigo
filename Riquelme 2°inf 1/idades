# 002.py
# Programa para ler idades e calcular a média

idades = []
quantidade = int(input("Quantas idades você vai informar? "))

for i in range(quantidade):
    idade = int(input(f"Informe a idade {i+1}: "))
    idades.append(idade)

media = sum(idades) / len(idades)
print(f"A média das idades é: {media:.2f}")